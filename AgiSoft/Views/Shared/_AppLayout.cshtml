@{ViewBag.MyLayout = "App";}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>AgiSoft- Agile Project Management Solutions</title>
        <link href="~/CueIcon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/appcss")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="toptoolbar">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
            </div>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("AgiSoft logo here", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Overview", "Index", "Product")</li>
                            <li>@Html.ActionLink("Details", "Features", "Product")</li>
                            <li>@Html.ActionLink("Plans/Prices", "Pricing", "Product")</li>
                            <li>@Html.ActionLink("Support", "Support", "Product")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            <section class="clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; 2012 - CueOwl,llc</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>