@Scripts.Render("~/bundles/knockout")

@model Tuple<AgiSoft.Models.webpages_Roles,AgiSoft.Models.RoleGroups>

@{
    ViewBag.Title = "Create Roles";
}

<table>
    <tr>
        <td style="width:20px;padding:0;"><input style="width:20px;" type="radio" name="type" value="role" data-bind="checked: type" /></td>
        <td  style="text-align:left; padding:0">Create Role</td>
        <td style="width:20px;"></td>
        <td style="width:20px;padding:0;"><input style="width:20px;" type="radio" name="type" value="group" data-bind="checked: type" /></td>
        <td  style="text-align:left; padding:0">Create Group</td>
    </tr>
</table>

<div data-bind="visible: isType('role')">
    <h2>RolesCreate</h2>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>webpages_Roles</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.Item1.RoleName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Item1.RoleName)
                @Html.ValidationMessageFor(model => model.Item1.RoleName)
            </div>

            <p>
                <input type="submit" value="Create" />
            </p>
        </fieldset>
    }
</div>

<div data-bind="visible: isType('group')">
    <h2>Create a Role Group</h2>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Role Group</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.Item2.GroupName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Item2.GroupName)
                @Html.ValidationMessageFor(model => model.Item2.GroupName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Item2.Description)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Item2.Description)
                @Html.ValidationMessageFor(model => model.Item2.Description)
            </div>

            <p>
                <input type="submit" value="Create" />
            </p>
        </fieldset>
    }
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script type="text/javascript">
    var viewModel = {
        type: ko.observable(true),
        isType: function (type) {
            return type === this.type();
        }
    };

    ko.applyBindings(viewModel);
</script>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
