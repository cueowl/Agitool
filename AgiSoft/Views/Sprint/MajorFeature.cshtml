@Scripts.Render("~/bundles/knockout")

@model AgiSoft.Models.MajorFeature

@{
    ViewBag.Title = "Create Major Feature";
}

<h2>Create Major Feature</h2>
    
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.Hidden("type","majorfeature")
    <fieldset>
        <legend>Major Feature</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.MFNum)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MFNum)
            @Html.ValidationMessageFor(model => model.MFNum)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.MFDesc)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MFDesc)
            @Html.ValidationMessageFor(model => model.MFDesc)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.TeamId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.TeamId, (SelectList)ViewBag.teamid)
            @Html.ValidationMessageFor(model => model.TeamId)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.ProjectId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.ProjectId, (SelectList)ViewBag.projectid)
            @Html.ValidationMessageFor(model => model.ProjectId)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.EffortHours)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EffortHours)
            @Html.ValidationMessageFor(model => model.EffortHours)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}