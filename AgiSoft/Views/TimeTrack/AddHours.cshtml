@Scripts.Render("~/bundles/knockout")

@model AgiSoft.Models.TimeTrack

@{
    ViewBag.Title = "Add Hours";
}

<h2>Add Hours</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.Hidden("type", "addhours")
    <fieldset>
        <legend>Add Hours</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.UserId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.UserId, (SelectList)ViewBag.userid)
            @Html.ValidationMessageFor(model => model.UserId)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.ProjectId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.ProjectId, (SelectList)ViewBag.projectid)
            @Html.ValidationMessageFor(model => model.ProjectId)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Hours)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Hours)
            @Html.ValidationMessageFor(model => model.Hours)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}