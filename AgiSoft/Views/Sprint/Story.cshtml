@model List<AgiSoft.Models.Stories>

@{
    ViewBag.Title = "Story";
}

<h2>Story</h2>
<nav>
    <ul id="menu">
        <li>@Html.ActionLink("Index", "Index", "Sprint")</li>
        <li>@Html.ActionLink("Member", "Backlog", "Sprint")</li>
        <li>@Html.ActionLink("Sprint Plan", "Plan", "Sprint")</li>
        <li>@Html.ActionLink("Reports", "Reports", "Sprint")</li>
        <li>@Html.ActionLink("Epics", "Epic", "Sprint")</li>
        <li>@Html.ActionLink("Stories", "Story", "Sprint")</li>
        <li>@Html.ActionLink("Tasks", "Task", "Sprint")</li>
    </ul>
</nav>

<script type="text/javascript">
    function opentask(value) {
        window.open('../Sprint/TaskCreate?StoryId=' + value, null, 'height=500, width=1100, status=no, resizable=no, scrollbars=yes, toolbar=no,location=no, menubar=no');
    }
</script>

@if (Model != null)
{
    <table border="1px" style="grid-column: auto">
        <tr>
            <td><b>Story Description</b>
            </td>
            <td><b>Hours</b>
            </td>
            <td><b>Points</b>
            </td>
            <td><b>Rank</b>
            </td>
        </tr>
        @foreach (var item in Model)
        {   
            <tr>
                <td>
                    @item.StoryDesc
                </td>
                <td>
                    @item.Hours
                </td>
                <td>
                    @item.Points
                </td>
                <td>
                    @item.Rank
                </td>
                <td>
                    <input type="button" value="Add Task" name="Add Task" title="Add Task" onclick="return opentask('@item.StoryId')" />
                </td>
            </tr>
        }
    </table>
}