@model AgiSoft.Models.TeamOnProject
@{
    ViewBag.Title = "TeamProject";
}

<h2>TeamProject</h2>
@using (Html.BeginForm())
{
    Html.AntiForgeryToken();
    <span>Project Name:</span>
    <input type="text" id="projectname" value="@ViewBag.ProjectId" name="@ViewBag.ProjectId" />
    <div class="editor-label">
        @Html.LabelFor(m => m.TeamId)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.TeamId, (SelectList)ViewBag.teamid, new { style = "width:250px" })
        @Html.ValidationMessageFor(model => model.TeamId)
    </div>
    <div>
        <input type="submit" id="assign" value="Assign" name="Assign" />
    </div>
}